{
  "name": "eth-validator-monitor",
  "version": "1.0.0",
  "description": "Ethereum Validator Node Monitoring Desktop App",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder --win",
    "build:dir": "cross-env NODE_ENV=production electron-builder --win --dir",
    "build:mac": "cross-env NODE_ENV=production electron-builder --mac",
    "build:mac:dir": "cross-env NODE_ENV=production electron-builder --mac --dir",
    "build:all": "cross-env NODE_ENV=production electron-builder --win --mac --linux"
  },
  "keywords": [
    "ethereum",
    "validator",
    "monitoring",
    "staking"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "electron-store": "^11.0.2"
  },
  "build": {
    "appId": "com.ethvalidator.monitor",
    "productName": "ETH Validator Monitor",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ETH Validator Monitor"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.finance",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "provisioningProfile": null,
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icon.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance",
      "icon": "assets/icon.png"
    }
  }
}
